{
  "name": "ai-hub",
  "version": "1.0.1",
  "description": "Um hub Electron para integrar NotebookLM, Gemini e ChatGPT (revisado).",
  "main": "main.js",
  "scripts": {
    "start": "electron . --gtk-version=3 --enable-features=UseOzonePlatform --ozone-platform=wayland",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "rpm": "electron-builder --linux rpm"
  },
  "keywords": [
    "AI",
    "Electron",
    "Hub",
    "NotebookLM",
    "Gemini",
    "ChatGPT"
  ],
  "author": "Felipe Amaro <felipe.pamaro@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "electron": "^29.3.0",
    "electron-builder": "^24.13.3",
    "electron-reloader": "^1.2.3"
  },
  "dependencies": {
    "electron-store": "^8.2.0"
  },
  "build": {
    "appId": "ai-hub",
    "productName": "ai-hub",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.ts",
      "!*.code-workspace",
      "!.vscode/",
      "!src/",
      "!electron-builder.yml",
      "!build/",
      "!tsconfig.json",
      "app/**/**",
      "build/**/**",
      "node_modules/**/**",
      "package.json"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Utility",
      "icon": "assets/icon.png",
      "executableName": "ai-hub",
      "synopsis": "AI hub",
      "description": "Um hub com as IAs mais famosas",
      "desktop": {
        "Name": "AI Bub",
        "Comment": "Um hub com as IAs mais famosas",
        "StartupWMClass": "ai-hub"
      }
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon.png"
    }
  }
}
